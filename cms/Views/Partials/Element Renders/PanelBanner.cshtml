@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<IPublishedElement>

@{
    var imgPicker = Model.Value("headerImage") as MediaWithCrops<Image>;
    var imgUrl = imgPicker.Url();
}

<!-- Panel (Banner) -->
<section class="panel banner right" id='@Model.Value("anchorId")'>
    <div class="content color0 span-3-75">
        <h1 class="major">@Html.Raw(Model.Value("title"))</h1>
        @Html.Raw(Model.Value("description"))
        <ul class="actions">
            <li><a href='@Model.Value("cTALink")'
                    class="button primary color1 circle icon solid fa-angle-right">Next</a></li>
        </ul>
    </div>
    <div class="image filtered span-1-75" data-position="25% 25%">
        <img src='@imgUrl' alt="" />
    </div>
</section>
